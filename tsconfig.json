{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
  },
  "include": [
    "./src/**/*",
    "./example/**/*",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules"
]
}
