{
  "compilerOptions": {
    "baseUrl": "./assets",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
  },
  "include": [
    "./src/**/*",
    "declarations.d.ts",
    "./example/**/*",
  ],
  "exclude": [
    "node_modules"
]
}
